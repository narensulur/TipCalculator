{
  "name": "QBO Calendar",
  "description": "Quickbooks with Google Calendar",
  "manifest_version": 2,
  // "minimum_chrome_version": "29",
  "default_locale":"en",
  "options_page": "views/options.html",
  // "options_ui": {
  //   "page": "views/options.html",
  //   "chrome_style": true
  // },
  "version": "1.0.0",
  "background": {
    "scripts": ["javascript/oauth2/oauth2.js", "javascript/auth.js", "javascript/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://www.google.com/robots.txt*"],
      "js": ["javascript/oauth2/oauth2_inject.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["https://*.google.com/*"],
      "css": ["styles/style.css"],
      "js": [
        "javascript/auth.js", 
        "javascript/jquery.min.js", 
        "javascript/jquery.autocomplete.min.js", 
        "javascript/cal.js"
      ]
    }
  ],
  "permissions": [
    "notifications",
    "activeTab",
    "tabs",
    "https://*.google.com/*",
    "https://accounts.google.com/o/oauth2/token",
    "https://*.googleapis.com/*"
  ],
  "web_accessible_resources" : [
    "javascript/oauth2/oauth2.html"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "QBO Calendar",
    "default_popup": "views/popup.html"
  },
  "icons": {
    "128": "images/icon-128.png",
    "48": "images/icon-48.png",
    "16":"images/icon-16.png"
  }
}
