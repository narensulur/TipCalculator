{
  "name": "QBO Calendar",
  "description": "Quickbooks with Google Calendar",
  "manifest_version": 2,
  "default_locale":"en",
  "options_page": "views/options.html",
  "options_ui": {
    "page": "views/options.html",
    "chrome_style": true
  },
  "version": "1.0.0",
  "background": {
    "scripts": ["javascript/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.google.com/*"],
      "css": ["styles/style.css"],
      "js": ["javascript/jquery.min.js", "javascript/jquery.autocomplete.min.js", "javascript/cal.js"]
    }
  ],
  "permissions": [
    "notifications",
    "activeTab",
    "tabs",
    "https://*.google.com/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "QBO Calendar"
  },
  "icons": {
    "128": "images/icon-128.png",
    "48": "images/icon-48.png",
    "16":"images/icon-16.png"
  }
}
